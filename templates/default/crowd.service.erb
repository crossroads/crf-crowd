# Inspired by https://github.com/bparsons/atlassian-systemd/blob/master/crowd.service

[Unit] 
Description=JIRA Team Collaboration Software
After=network.target

[Service] 
Type=forking
PIDFile=<%= node['crowd']['pid_dir'] %>/catalina.pid
ExecStart=<%= node['crowd']['install_path'] %>/current/bin/startup.sh
ExecStop=<%= node['crowd']['install_path'] %>/current/bin/shutdown.sh
User=<%= node['crowd']['run_user'] %>

[Install] 
WantedBy=multi-user.target 
